<script>
/*
  Ruleta client-side (sin servidor).
  - Configura premios en la constante PRIZES abajo.
  - URL de RFID: https://TU_HOST/ruleta/?tag=JAC-RFID-01
  - Para prevenir varias participaciones en el mismo dispositivo usamos localStorage (opcional).
  - Puedes personalizar duraciÃ³n/velocidad/fÃ­sica fÃ¡cilmente.
*/

const PRIZES = [
  {label: "Bono $1,500 en accesorios", desc:"Se acredita como descuento al separar con â‰¥ $5,000", codePrefix:"ACCES-"},
  {label: "Llavero JAC oficial", desc:"Llavero exclusivo de la expo", codePrefix:"LLAV-"},
  {label: "CupÃ³n cafÃ© $150", desc:"Vale por un cafÃ© en el stand", codePrefix:"CAFE-"},
  {label: "1er sorteo final: Servicio gratis", desc:"Participa en el sorteo final", codePrefix:"SRV-"},
  {label: "Sticker ediciÃ³n expo", desc:"Sticker coleccionable JAC", codePrefix:"STKR-"},
  {label: "Kit limpieza interior", desc:"Kit para mantener tu auto", codePrefix:"KIT-"},
  {label: "Accesorio sorpresa", desc:"Accesorio sorpresa para tu unidad", codePrefix:"ACC-"},
  {label: "Entrada extra al sorteo VIP", desc:"Duplica tu probabilidad en el sorteo final", codePrefix:"VIP-"}
];

// --- Utilities ---
function $(sel){return document.querySelector(sel)}
function randInt(max){return Math.floor(Math.random()*max)}

// Get URL tag param
const params = new URLSearchParams(location.search);
const tag = params.get('tag') || 'unknown';
$('#tagVal').textContent = tag;

// Populate prize list UI
const prizeListEl = $('#prizeList');
PRIZES.forEach(p => {
  const li = document.createElement('li');
  li.textContent = p.label + " â€” " + p.desc;
  prizeListEl.appendChild(li);
});

// localStorage key to prevent re-spin
const storageKey = 'ruleta_participated_' + (tag || 'all');
const participated = localStorage.getItem(storageKey);

// UI elements
const spinBtn = $('#spinBtn');
const outcomeEl = $('#outcome');
const alreadyEl = $('#already');
const wonTitle = $('#wonTitle');
const wonDesc = $('#wonDesc');
const couponBox = $('#couponBox');
const couponCodeEl = $('#couponCode');
const copyBtn = $('#copyBtn');
const claimBtn = $('#claimBtn');

if (participated){
  // show already spun
  spinBtn.disabled = true;
  alreadyEl.style.display = 'block';
}

// --- Wheel drawing & spin mechanics ---
const canvas = $('#wheel');
const ctx = canvas.getContext('2d');
const W = canvas.width, H = canvas.height;
const cx = W/2, cy = H/2, radius = Math.min(W,H)/2 - 8;
const slices = PRIZES.length;
const colors = ["#e76f51","#f4a261","#ffd166","#06d6a0","#118ab2","#073b4c","#9b5de5","#f15bb5"];

let angle = 0, angularVelocity = 0, spinning = false;

function drawWheel(){
  ctx.clearRect(0,0,W,H);
  // outer circle
  for(let i=0;i<slices;i++){
    const start = angle + i*(2*Math.PI/slices);
    const end = start + (2*Math.PI/slices);
    ctx.beginPath();
    ctx.moveTo(cx,cy);
    ctx.arc(cx,cy,radius,start,end);
    ctx.closePath();
    ctx.fillStyle = colors[i % colors.length];
    ctx.fill();
    // text
    ctx.save();
    ctx.translate(cx,cy);
    const mid = (start+end)/2 - angle;
    ctx.rotate((start+end)/2);
    ctx.textAlign = "right";
    ctx.fillStyle = "#021022";
    ctx.font = "bold 16px Inter, sans-serif";
    ctx.fillText(PRIZES[i].label, radius - 12, 6);
    ctx.restore();
  }
  // center circle
  ctx.beginPath();
  ctx.arc(cx,cy,60,0,2*Math.PI);
  ctx.fillStyle = "#021022";
  ctx.fill();
  ctx.fillStyle = "#fff";
  ctx.textAlign = "center";
  ctx.font = "bold 18px Inter, sans-serif";
  ctx.fillText("GIRAR", cx, cy+6);
}

function animate(){
  if(!spinning) return;
  angularVelocity *= 0.995; // friction
  angle += angularVelocity;
  if(Math.abs(angularVelocity) < 0.0005){
    spinning = false;
    angularVelocity = 0;
    onStop();
  }
  drawWheel();
  requestAnimationFrame(animate);
}

// compute selected index from final angle (pointer at top)
function getSelectedIndex(){
  // Normalize angle to [0,2PI)
  let a = angle % (2*Math.PI);
  if(a < 0) a += 2*Math.PI;
  // pointer is at -PI/2 (top). Compute which slice covers that angle.
  const pointerAngle = (3*Math.PI/2 - a + 2*Math.PI) % (2*Math.PI);
  const sliceAngle = 2*Math.PI / slices;
  let idx = Math.floor(pointerAngle / sliceAngle);
  // idx in [0..slices-1]
  idx = (slices - 1) - idx; // because of canvas rotation/direction, adjust to match labels
  idx = (idx + slices) % slices;
  return idx;
}

function spinOnce(){
  if(spinning) return;
  spinBtn.disabled = true;
  // Random initial angular velocity (tuned)
  const minSpins = 4; const maxSpins = 7;
  const spins = minSpins + Math.random() * (maxSpins - minSpins);
  // Add some randomness but allow optional seed by tag: (deterministic seed commented)
  // const seed = hashString(tag + Date.now());
  const targetAngular = spins * 2 * Math.PI + (Math.random() * 2*Math.PI);
  angularVelocity = 0.5 + (targetAngular / 200); // tuning factor
  spinning = true;
  animate();
}

// Called when spin stops
function onStop(){
  const idx = getSelectedIndex();
  const prize = PRIZES[idx];
  // generate coupon code (prefix + random)
  const code = (prize.codePrefix || "PR-") + Math.random().toString(36).slice(2,8).toUpperCase();
  wonTitle.textContent = prize.label;
  wonDesc.textContent = prize.desc;
  couponCodeEl.textContent = code;
  couponBox.style.display = 'flex';
  outcomeEl.style.display = 'block';
  // block future spins on this device+tag
  localStorage.setItem(storageKey, JSON.stringify({ts:Date.now(), prize:prize.label, code:code}));
  spinBtn.disabled = true;
  // show copy action
  copyBtn.onclick = ()=> {
    navigator.clipboard?.writeText(code).then(()=> alert('CÃ³digo copiado: ' + code)).catch(()=> alert('No se pudo copiar'));
  };
  claimBtn.onclick = ()=> {
    // AcciÃ³n: instrucciÃ³n para reclamar (no hay servidor)
    alert('Muestra este cÃ³digo al staff: ' + code + '\nSi separaste con â‰¥ $5,000 hoy, obtendrÃ¡s el bono extra al confirmarlo.');
  };
}

// initial draw
drawWheel();
spinBtn.addEventListener('click', spinOnce);

// Accessibility: allow space/enter to spin
document.addEventListener('keydown', (e)=>{ if((e.code==='Space' || e.code==='Enter') && !spinBtn.disabled) { e.preventDefault(); spinOnce(); } });

// Optional: if already participated, show details
if(participated){
  try {
    const info = JSON.parse(localStorage.getItem(storageKey));
    if(info){
      $('#wonTitle').textContent = info.prize || 'Premio anterior';
      $('#wonDesc').textContent = 'CÃ³digo anterior: ' + (info.code || '(sin cÃ³digo)');
      couponCodeEl.textContent = info.code || 'â€”';
      couponBox.style.display = 'flex';
      outcomeEl.style.display = 'block';
      alreadyEl.style.display = 'block';
    }
  }catch(e){}
}

/* Optional helper: deterministic hash if quieres un spin determinista por tag
function hashString(str){
  let h=2166136261;
  for(let i=0;i<str.length;i++){ h ^= str.charCodeAt(i); h += (h<<1) + (h<<4) + (h<<7) + (h<<8) + (h<<24); }
  return h >>> 0;
}
*/
</script>
</body>
